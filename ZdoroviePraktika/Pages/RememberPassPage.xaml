<Window x:Class="ZdoroviePraktika.Pages.RememberPassPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdoroviePraktika.Pages"
        mc:Ignorable="d"
        Title="RememberPassPage" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1">
            <TextBlock HorizontalAlignment="Center" Width="300">Введите логин</TextBlock>
            <TextBox x:Name="RemLoginBox" Margin="25" Width="300"/>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <TextBlock HorizontalAlignment="Center" Grid.Row="2" Width="300">Введите свой возраст</TextBlock>
            <TextBlock HorizontalAlignment="Center" Grid.Row="2" Width="300" Height="15" FontSize="15" Foreground="DarkRed">Обязательно для заполения</TextBlock>
            <TextBox x:Name="RemAgeBox" Width="300"/>
        </StackPanel>
        <Button x:Name="RemPass" Grid.Row="3" Margin="25" Width="300" Content="Восстановить" Click="ShowPassClick"/>
    </Grid>
</Window>
