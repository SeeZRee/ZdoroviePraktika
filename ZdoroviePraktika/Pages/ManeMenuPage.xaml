<Page x:Class="ZdoroviePraktika.Pages.ManeMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZdoroviePraktika.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManeMenuPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Frame x:Name="FrameToManePage" Grid.Column="1"/>
        <StackPanel Orientation="Vertical" Background="LightGreen">
            <Image Source="/Images/Logo.png" Width="160" Height="120" Margin="5" VerticalAlignment="Top"/>
            <Button Height="55" Width="160" Margin="1,5" BorderBrush="Green" BorderThickness="3">Процедуры</Button>
            <Button Height="55" Width="160" Margin="1,5" BorderBrush="Green" BorderThickness="3" Click="PatientsManeMenuClick">Пациенты</Button>
            <Button Height="55" Width="100" Margin="1,5" BorderBrush="Green" BorderThickness="3" Click="EscapeManeMenuClick">Выход</Button>
        </StackPanel>
    </Grid>
</Page>
